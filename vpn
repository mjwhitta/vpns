#!/usr/bin/env bash

default_vpn() {
    local ret
    [[ -z $conf ]] || ret="$(cat $conf | jq -cMrS ".default_vpn")"
    [[ $ret != "null" ]] || unset ret
    echo "${ret:-pia}"
}

usage() {
    d="$(default_vpn)"
    echo "Usage: ${0/*\//} [OPTIONS] -- [pass-thru options]"
    echo
    echo "This is a wrapper script for other vpn scripts. Supported"
    echo "VPNs include PIA and WindScribe."
    echo
    echo "Options:"
    echo "    -h, --help       Display this help message"
    echo "    -l, --list       List included VPNs"
    echo "    -v, --vpn=VPN    Use the specified VPN (default: $d)"
    echo
    exit $1
}

if [[ -z $(command -v jq) ]]; then
    echo "jq is not installed"
    exit 3
fi

declare -a args
unset conf
action="vpn"
if [[ -f $HOME/.config/vpn/vpn.conf ]]; then
    conf="$HOME/.config/vpn/vpn.conf"
fi
vpn="$(default_vpn)"

while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-h"|"--help") usage 0 ;;
        "-l"|"--list") action="list" ;;
        "-v"|"--vpn"*)
            case "$1" in
                "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            vpn="$arg"
            ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ $action == "list" ]] || [[ $# -ge 1 ]] || usage 2

case "$0" in
    "./vpn") cd providers ;;
    *) cd INSTALL_DIR/providers ;;
esac

case "$action" in
    "list")
        find . -maxdepth 1 -mindepth 1 -type d | sed "s#./##g" | sort
        ;;
    "vpn")
        [[ -d $vpn ]] || usage 2
        cd $vpn && ./vpn.sh $@
        ;;
    *) usage 3
esac
